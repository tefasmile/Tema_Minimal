{{!< default}}
<ol class="posts">
  {{#foreach posts}}
  <li>
    <a href="{{url}}" title="link to {{{title}}}">
      <h2>{{{title}}}</h2>

      {{!--<p class="post description">{{excerpt}}&hellip;</p>--}}

    </a>

    <div class="postimage">
      {{#if image}}
        <figure>
            <a href="{{url}}"><img src="{{image}}" alt="{{title}}" class="index-post-image"></a>
        </figure>
      {{/if}}
    </div>
    
    <div class="post meta">

      <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time>
      
      <span class="post tags">{{tags prefix="on " separator=" "}}</span>
    </div>
    
    <hr class="divider post" />
  </li>
  {{/foreach}}
</ol>
{{pagination}}
